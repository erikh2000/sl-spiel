{
  "name": "spiel-lib",
  "version": "0.1.0",
  "description": "Library for loading, saving, and processing files in the Spiel format.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run docs",
    "clean": "rm -rf coverage dist docs/dist",
    "clean:modules": "rm -rf node_modules package-lock.json && npm install",
    "docs": "jsdoc -c ./docs/conf.json -d ./docs/dist/",
    "publish": "npm run build && npm publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts"
  },
  "author": "Erik Hermansen",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "jest": "^29.0.3",
    "jsdoc": "^3.6.11",
    "jsdoc-plugin-typescript": "^2.2.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "yaml": "^2.1.2"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "./src/**/*.{js,ts}",
      "!./src/3rdParty/**",
      "!./src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
